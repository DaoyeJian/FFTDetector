<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Otoha" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="windowActionBar">false</item>  //これよくわからない
        <item name="windowNoTitle">true</item>  //アクションバーの表示、非表示

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>  //アクションバーの色、ボタンの色、アラートダイアログのテキストの色
        <item name="colorPrimaryVariant">@color/myblue</item>  //statusbarの色
        <item name="colorOnPrimary">@color/black</item>  //ボタンのテキストなどの色
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myblue</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AlartDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>
</resources>